<!DOCTYPE html>
<html lang="en">

<head>
<%- include("./partial/header.ejs") %>
</head>

<body>

<%- include("./partial/navbar.ejs") %>

<div id="container" class="container-fluid pt-4 pb-4 my-2">

    <div id="channelInfo" class="container-fluid">
    <!-- <p class="text-wrap"> Channel Thumbnail:  <%= result.author.bestAvatar.url %> </p> -->
    <p> Channel Name: <%= result.author.name%> </p>
    <p> Uploads: <%= result.estimatedItemCount %> </p>
    <p> Views: <%= result.views %> </p>
    <p> <%= result.lastUpdated %> </p>
    </div>

    <div id="videos" class="pt-4 pb-4 text-center">
    
        <% result.items.map(v => {  %>

                <div id="video" class="mt-4 text-left d-inline-block" href="/watch/<%= v.id %>">
                    <div id="thumbnail" class="bg-dark">
                        <img src="/tn/<%= v.id %>" loading="lazy">
                    </div>

                    <div id="info" class="">                    
                        <p id="title" class="text-wrap"><%= v.title %></p>
                    </div>
                </div>

        <% }) %>
        
    </div>
</div>


</body>

<%- include('./partial/footer.ejs') %>



</body>

</html>
